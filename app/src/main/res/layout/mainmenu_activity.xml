<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="공지사항"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/noticeField"
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:layout_margin="5dp"
        android:layout_weight="0.3"
        android:minHeight="200dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="#4A00FDDF"
            android:padding="5dp"
            android:text="공지사항 1"
            android:textColor="@color/black" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/noticeBtn"
            android:layout_width="0dp"
            android:layout_height="87dp"
            android:layout_weight="0.3"
            android:backgroundTint="#4A00FDDF"
            android:scaleType="fitCenter"
            android:src="@drawable/notice"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/communityBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/communityBtn"
            android:layout_width="0dp"
            android:layout_height="87dp"
            android:layout_weight="0.3"
            android:backgroundTint="#4A00FDDF"
            android:scaleType="centerInside"
            android:src="@drawable/lists"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/writeBtn"
            app:layout_constraintStart_toEndOf="@+id/noticeBtn"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/writeBtn"
            android:layout_width="0dp"
            android:layout_height="87dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="0.3"
            android:scaleType="centerInside"
            android:src="@drawable/write"
            android:backgroundTint="#4A00FDDF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/communityBtn"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.7">
        <TextView
            android:id="@+id/userid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="unknown"/>
    </LinearLayout>
</LinearLayout>