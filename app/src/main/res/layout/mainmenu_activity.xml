<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:text="한밭대학교 정보통신공학과"
        android:textAlignment="center"
        android:textColor="#6200EC"
        android:textSize="20dp"
        android:textStyle="bold" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="0.7"></androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/introduceBtn"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#6200ED"
                android:scaleType="fitXY"
                android:src="@drawable/introduce"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/gotoWebBtn"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#6200ED"
                android:scaleType="fitXY"
                android:src="@drawable/homepage"
                app:tint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/jobInfoBtn"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#6200ED"
                android:scaleType="fitXY"
                android:src="@drawable/jobinfo"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/communityBtn"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#6200ED"
                android:scaleType="fitXY"
                android:src="@drawable/community"
                app:tint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/deptNoticeBtn"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#6200ED"
                android:scaleType="fitXY"
                android:src="@drawable/deptnotice"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/howtocomeBtn"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#6200ED"
                android:scaleType="fitXY"
                android:src="@drawable/howtocome"
                app:tint="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
